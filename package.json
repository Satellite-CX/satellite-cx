{
  "name": "satellite-cx",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:up": "docker compose -f docker-compose.dev.yml up db --build -d --force-recreate",
    "db:down": "docker compose -f docker-compose.dev.yml down",
    "db:reset": "pnpm db:down && pnpm db:up && sleep 3 && pnpm db:push",
    "db:push": "pnpm --filter @repo/db push",
    "kill": "bash -c 'lsof -ti:$1 | xargs -r kill -9' --",
    "gen:docs": "pnpm --filter=docs... generate:docs"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=24"
  },
  "volta": {
    "node": "24.9.0"
  }
}
