{
  "name": "api",
  "type": "module",
  "scripts": {
    "dev": "PORT=8000 bun run --env-file=../../.env --hot src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./build --target bun",
    "start": "PORT=8000 bun run ./build/index.js",
    "test": "bun --env-file=../../.env test --reporter=junit --reporter-outfile=./test-results.xml",
    "clean": "rm -rf .turbo node_modules",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "dependencies": {
    "@hono/standard-validator": "^0.1.5",
    "@hono/trpc-server": "^0.4.0",
    "@hono/zod-openapi": "^1.1.3",
    "@repo/db": "workspace:*",
    "@repo/trpc": "workspace:*",
    "@repo/validators": "workspace:*",
    "axios": "^1.9.0",
    "better-auth": "^1.3.18",
    "hono": "^4.9.9",
    "hono-openapi": "^1.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "typescript": "5.9.2"
  }
}
