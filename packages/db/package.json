{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./schema": "./src/schema/index.ts",
    "./client": "./src/client.ts",
    "./auth": "./src/lib/auth.ts",
    "./auth-client": "./src/lib/auth-client.ts"
  },
  "scripts": {
    "dev": "drizzle-kit studio",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate && pnpm prepare-rls",
    "migrate-auth": "npx @better-auth/cli@latest migrate --config=./src/lib/auth.ts",
    "push": "drizzle-kit push",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "bun --env-file=../../.env test --reporter=junit --reporter-outfile=./test-results.xml",
    "prepare-rls": "bun run create-rls-user && bun run apply-rls-policies",
    "create-rls-user": "bun --env-file=../../.env run scripts/create-rls-user.ts",
    "apply-rls-policies": "bun --env-file=../../.env run scripts/apply-rls-policies.ts"
  },
  "dependencies": {
    "@repo/validators": "workspace:*",
    "@types/bun": "^1.2.21",
    "better-auth": "^1.3.11",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.36.4",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.10",
    "dotenv-expand": "^12.0.3",
    "drizzle-kit": "^0.28.1",
    "eslint": "^9.34.0",
    "nanoid": "^5.1.5",
    "typescript": "5.9.2"
  }
}
