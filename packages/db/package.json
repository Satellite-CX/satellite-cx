{
  "name": "@repo/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./auth": "./src/auth/index.ts",
    "./schema": "./src/schema/index.ts",
    "./client": "./src/client.ts",
    "./utils": "./src/utils/index.ts",
    "./test-utils": "./tests/utils/index.ts"
  },
  "scripts": {
    "dev": "drizzle-kit studio",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate && pnpm prepare-rls",
    "push": "drizzle-kit push && pnpm prepare-rls",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "bun --env-file=../../.env test --reporter=junit --reporter-outfile=./test-results.xml --max-concurrency=1",
    "prepare-rls": "bun run create-rls-user && bun run apply-rls-policies",
    "create-rls-user": "bun --env-file=../../.env run scripts/create-rls-user.ts",
    "apply-rls-policies": "bun --env-file=../../.env run scripts/apply-rls-policies.ts"
  },
  "dependencies": {
    "better-auth": "^1.3.24",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "@types/pg": "^8.11.10",
    "dotenv-expand": "^12.0.3",
    "drizzle-kit": "^0.28.1",
    "eslint": "^9.34.0",
    "nanoid": "^5.1.5",
    "typescript": "5.9.2"
  }
}
